pipeline {
 
 agent {

     label 'master'
 }
 
 tools {

     maven 'mymaven'
     jdk 'java11'
 }

 stages {

     stage('Validate Project') {
     steps {

         script{

             mvn validate
         }
     }
     }

     stage('Code Compile') {
     steps {

         script{

             mvn compile
         }
     }
     }
 }

}